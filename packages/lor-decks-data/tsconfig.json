{
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "ES6",
      "DOM",
      "ES2019"
    ],
    "target": "ES5",
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
